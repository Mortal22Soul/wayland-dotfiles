exec waybar &
exec dunst &
exec_always notify-send "Welcome back $USER!"

#
# custom keybindings
#
bindsym $mod+B exec brave-browser-stable &
bindsym $mod+C exec code &
bindsym $alt+E exec thunar &
bindsym $mod+R exec wofi --hide-scroll --insensitive --show drun
bindsym Print exec grimshot --notify copy area

#
# lockscreen
